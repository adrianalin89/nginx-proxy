#!/usr/bin/env bash
set -o errexit
mkdir -p tmpupdate && cd "$_"

git init -qqq
git remote add origin https://github.com/adrianalin89/nginx-proxy.git
git fetch origin -qqq
git checkout master

mv compose/* ./
mv compose/.gitignore ./
mv compose/.vscode ./
rm -rf .git

rsync -av --checksum ./ ../
cd ..
rm -rf tmpupdate
echo "project has been updated, run bin/restart to apply the updates"
