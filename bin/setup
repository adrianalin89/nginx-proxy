#!/usr/bin/env bash

# Copy .env.example to .env if .env does not exist
[ ! -f .env ] && cp .env.example .env

# Get user and group ID
USER_ID=$(id -u)
GROUP_ID=$(id -g)

# Replace USER_ID and GROUP_ID in .env
sed -i "s/^USER_ID=.*/USER_ID=${USER_ID}/" .env
sed -i "s/^GROUP_ID=.*/GROUP_ID=${GROUP_ID}/" .env
echo "Replacing USER_ID and GROUP_ID in .env"

# Check if the Docker network exists, create if it doesn't
NETWORK_NAME="nginx-proxy"
if ! docker network ls | grep -q "${NETWORK_NAME}"; then
  echo "Creating Docker network: ${NETWORK_NAME}"
  docker network create "${NETWORK_NAME}"
fi

NETWORK_NAME="shared-db-network"
if ! docker network ls | grep -q "${NETWORK_NAME}"; then
  echo "Creating Docker network: ${NETWORK_NAME}"
  docker network create "${NETWORK_NAME}"
fi

NETWORK_NAME="mail-catcher-network"
if ! docker network ls | grep -q "${NETWORK_NAME}"; then
  echo "Creating Docker network: ${NETWORK_NAME}"
  docker network create "${NETWORK_NAME}"
fi

NETWORK_NAME="open-search-network"
if ! docker network ls | grep -q "${NETWORK_NAME}"; then
  echo "Creating Docker network: ${NETWORK_NAME}"
  docker network create "${NETWORK_NAME}"
fi

NETWORK_NAME="rabbitmq-network"
if ! docker network ls | grep -q "${NETWORK_NAME}"; then
  echo "Creating Docker network: ${NETWORK_NAME}"
  docker network create "${NETWORK_NAME}"
fi

if ! grep -q "portainer.test" /etc/hosts; then
    echo "Your system password is needed to add an entry to /etc/hosts..."
    echo "127.0.0.1 ::1 portainer.test" | sudo tee -a /etc/hosts
fi

if ! grep -q "rabbitmq.test" /etc/hosts; then
    echo "Your system password is needed to add an entry to /etc/hosts..."
    echo "127.0.0.1 ::1 rabbitmq.test" | sudo tee -a /etc/hosts
fi

if ! grep -q "search.test" /etc/hosts; then
    echo "Your system password is needed to add an entry to /etc/hosts..."
    echo "127.0.0.1 ::1 search.test" | sudo tee -a /etc/hosts
fi

if ! grep -q "mail.test" /etc/hosts; then
    echo "Your system password is needed to add an entry to /etc/hosts..."
    echo "127.0.0.1 ::1 mail.test" | sudo tee -a /etc/hosts
fi

if ! grep -q "db.test" /etc/hosts; then
    echo "Your system password is needed to add an entry to /etc/hosts..."
    echo "127.0.0.1 ::1 db.test" | sudo tee -a /etc/hosts
fi

# Print instructions to run the start command
echo "Run the following command to start the containers:"
echo "./bin/start"
